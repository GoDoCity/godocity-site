---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const { title, subtitle, cityBase } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <meta name="color-scheme" content="dark" />
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
    <meta name="description" content={subtitle ?? "GoDoCity â€“ multi-city local content platform"} />
  </head>
  <body class={cityBase ? `city city-${cityBase}` : "city"}>
    <Header title={title} subtitle={subtitle} cityBase={cityBase} />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
