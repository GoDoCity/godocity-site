<Base title="Advertise | GoDoCity" subtitle="Simple, city-first ad packages (placeholder).">
  <section class="section">
    <div class="container">
      <div class="card card-pad">
        <div class="kicker">Advertise</div>
        <h1 style="margin:10px 0 8px;font-size:34px">Advertise with GoDoCity</h1>
        <p class="lede">
          This is the placeholder page for your media kit, sponsorships, and newsletter placements.
          When you’re ready, we’ll add ad packages by city and a lead form.
        </p>
        <div class="tagrow">
          <a class="tag" href="https://daytona.godocity.com/">GoDoDaytona</a>
          <a class="tag" href="/">GoDoCity</a>
        </div>
      </div>
    </div>
  </section>
</Base>
