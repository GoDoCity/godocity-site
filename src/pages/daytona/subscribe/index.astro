---
import Base from "../../../layouts/Base.astro";
const title = "Subscribe";
const subtitle = "Get GoDoDaytona in your inbox.";
---
<Base title={title} subtitle={subtitle} cityBase="daytona" />

<section class="section">
  <div class="container">
    <h1 class="h1">Subscribe</h1>
    <p class="lede">Coming soon. Daily/weekly highlights of the best local Daytona content.</p>

    <div class="card card-pad" style="margin-top:14px;">
      <div class="kicker">Newsletter</div>
      <p class="lede" style="margin:8px 0 0;">
        This form will be connected to your email provider (Beehiiv/Mailchimp/ConvertKit).
      </p>
    </div>
  </div>
</section>
