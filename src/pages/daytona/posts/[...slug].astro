---
import Base from "../../../layouts/Base.astro";
import { getCollection } from "astro:content";

/**
 * Daytona filter (supports both explicit frontmatter city and legacy folder IDs)
 */
function isDaytonaPost(post) {
  const city = String(post?.data?.city ?? "daytona").toLowerCase();
  if (city === "daytona") return true;
  return typeof post?.id === "string" && post.id.startsWith("daytona/");
}

/**
 * Featured flag normalization
 * supports: true, "true", "yes", 1, "1"
 */
function isFeatured(post) {
  const v = post?.data?.featured;
  if (v === true) return true;
  if (v === 1) return true;
  const s = String(v ?? "").toLowerCase().trim();
  return s === "true" || s === "yes" || s === "1";
}

/**
 * Rule A — Canonical Tag Normalization
 * - case-insensitive
 * - treats "motor sports", "motor-sports", "Motor Sports" as the same tag
 */
function tagKey(raw) {
  return String(raw ?? "")
    .toLowerCase()
    .trim()
    .replace(/[-_]+/g, " ")
    .replace(/\s+/g, " ");
}

function tagSlugFromKey(key) {
  return String(key ?? "")
    .toLowerCase()
    .trim()
    .replace(/&/g, "and")
    .replace(/[^a-z0-9]+/g, "-")
    .replace(/(^-|-$)/g, "");
}

function tagLabelFromKey(key) {
  const s = String(key ?? "").trim().replace(/\s+/g, " ");
  if (!s) return "";
  return s
    .split(" ")
    .map((w) => (w ? w.charAt(0).toUpperCase() + w.slice(1) : ""))
    .join(" ");
}

function getPostDate(post) {
  return (
    post?.data?.pubDate ??
    post?.data?.date ??
    post?.data?.published ??
    post?.data?.updated ??
    null
  );
}

function sortNewestFirst(a, b) {
  const da = new Date(getPostDate(a) ?? 0).getTime();
  const db = new Date(getPostDate(b) ?? 0).getTime();
  return db - da;
}

export async function getStaticPaths() {
  const posts = (await getCollection("posts")).filter(isDaytonaPost);

  // IMPORTANT: for `[...slug]`, Astro expects `slug` to be a STRING (not an array).
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;

const title = post.data.title ?? post.slug;
const subtitle = post.data.description ?? "GoDoDaytona post";
const { Content } = await post.render();

// Tags (Rule A)
const rawTags = Array.isArray(post.data?.tags) ? post.data.tags : [];
const uniqueKeySet = new Set(rawTags.map(tagKey).filter(Boolean));
const tagItems = Array.from(uniqueKeySet).map((key) => ({
  key,
  label: tagLabelFromKey(key),
  slug: tagSlugFromKey(key),
}));

// Date display
const d = getPostDate(post);
const dateText = d ? new Date(d).toLocaleDateString() : "";

// Related posts: same city, share tags, exclude current, top 5
const allDaytona = (await getCollection("posts"))
  .filter(isDaytonaPost)
  .sort(sortNewestFirst);

const currentTagKeys = new Set(rawTags.map(tagKey).filter(Boolean));

function relatedScore(p) {
  const tags = Array.isArray(p.data?.tags) ? p.data.tags : [];
  const keys = tags.map(tagKey).filter(Boolean);
  let score = 0;
  for (const k of keys) if (currentTagKeys.has(k)) score += 1;
  return score;
}

const related = allDaytona
  .filter((p) => p.slug !== post.slug)
  .map((p) => ({ p, score: relatedScore(p) }))
  .filter((x) => x.score > 0)
  .sort((a, b) => {
    if (b.score !== a.score) return b.score - a.score;
    return sortNewestFirst(a.p, b.p);
  })
  .slice(0, 5)
  .map((x) => x.p);
---

<Base title={title} subtitle={subtitle} cityBase="daytona" />

<section class="section">
  <div class="container" style="max-width: 780px;">
    <h1 class="h1">{title}</h1>
    {post.data.description && <p class="lede">{post.data.description}</p>}

    <div style="margin-top:10px;display:flex;align-items:center;gap:10px;flex-wrap:wrap;opacity:.9">
      {dateText && <span style="opacity:.7">{dateText}</span>}

      {isFeatured(post) && (
        <span
          style="
            font-size:12px;
            font-weight:800;
            letter-spacing:.04em;
            padding:6px 10px;
            border-radius:999px;
            border:1px solid rgba(255,220,80,.65);
            color:rgba(255,220,80,.95);
            background:rgba(255,220,80,.12);
          "
        >
          FEATURED
        </span>
      )}
    </div>

    {tagItems.length > 0 && (
      <div style="margin-top:12px;display:flex;flex-wrap:wrap;gap:10px;">
        {tagItems.map((t) => (
          <a class="pill" href={`/daytona/topic/${t.slug}/`}>{t.label}</a>
        ))}
      </div>
    )}

    <article style="margin-top:18px;line-height:1.65">
      <Content />
    </article>

    {related.length > 0 && (
      <div style="margin-top:26px;">
        <h2 style="font-size:18px;margin:0 0 12px 0;">Related posts</h2>

        <div style="display:flex;flex-direction:column;gap:12px;">
          {related.map((p) => {
            const rt = p.data.title ?? p.slug;
            const rd = p.data.description ?? "";
            const pd = getPostDate(p);
            const rDate = pd ? new Date(pd).toLocaleDateString() : "";

            return (
              <a href={`/daytona/posts/${p.slug}/`} style="text-decoration:none;display:block;">
                <div
                  style="
                    border: 1px solid rgba(255,255,255,.12);
                    border-radius: 14px;
                    padding: 12px 14px;
                    background: rgba(255,255,255,.03);
                  "
                >
                  <div style="display:flex;justify-content:space-between;gap:12px;align-items:flex-start;">
                    <div>
                      <div style="font-weight:800;line-height:1.25">{rt}</div>
                      {rd && <div style="opacity:.8;margin-top:6px">{rd}</div>}
                      {rDate && <div style="opacity:.6;margin-top:8px">{rDate}</div>}
                    </div>

                    {isFeatured(p) && (
                      <span
                        style="
                          font-size: 12px;
                          font-weight: 800;
                          letter-spacing: .04em;
                          padding: 6px 10px;
                          border-radius: 999px;
                          border: 1px solid rgba(255,220,80,.65);
                          color: rgba(255,220,80,.95);
                          background: rgba(255,220,80,.12);
                          white-space: nowrap;
                        "
                      >
                        FEATURED
                      </span>
                    )}
                  </div>
                </div>
              </a>
            );
          })}
        </div>
      </div>
    )}

    <p style="margin-top:22px;display:flex;gap:10px;flex-wrap:wrap;">
      <a class="pill" href="/daytona/posts/">← All posts</a>
      <a class="pill" href="/daytona/topics/">Topics</a>
    </p>
  </div>
</section>
